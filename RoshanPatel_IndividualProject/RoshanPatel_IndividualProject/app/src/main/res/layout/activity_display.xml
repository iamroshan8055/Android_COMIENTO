<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:layout_marginTop="180dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/prod_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#DDDDDD">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="$ 00"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/free_delivery_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:text="Delivery Free" />

                            <TextView
                                android:id="@+id/desc_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:text="Description"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                app:srcCompat="@drawable/list_1" />

                            <TextView
                                android:id="@+id/text_desciption"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="-25dp"
                                android:layout_marginRight="30dp"
                                android:text="TextView"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/btn_buy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="30dp"
                                android:backgroundTint="#b10b2d"
                                android:onClick="buy_click"
                                android:text="@string/go_pay_btn"
                                app:cornerRadius="10dp"
                                app:strokeColor="#FFC107"
                                app:strokeWidth="1dp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/text_rat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="45dp"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="#FFC107"
                android:scaleX="0.6"
                android:scaleY="0.6"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="167dp"
                android:layout_height="162dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                tools:srcCompat="@drawable/food_png_12" />

        </RelativeLayout>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>

